{
	"mediaqueries": {
		"landscape":"'screen and (orientation: landscape)'",
		"portrait":"'screen and (orientation: portrait)'",
		"retina":"'only screen and (-webkit-min-device-pixel-ratio: 2), only screen and (min--moz-device-pixel-ratio: 2), only screen and (-o-min-device-pixel-ratio: 2/1), only screen and (min-device-pixel-ratio: 2), only screen and (min-resolution: 192dpi), only screen and (min-resolution: 2dppx)'",
		"small":"'only screen and (min-width: 0em)'"
	},
	"global": {
    	"width": "rem-calc(1200)",
    	"lineheight": "1.5",
    	"margin": "1rem",
        "padding": "1rem",
        "margin": "1rem",
        "weight-normal": "normal",
        "weight-bold": "bold",
        "radius": "0",
        "namespace": "false",
        "text-direction": "ltr"
    },
	"color":{
		"primary" : "#3D5AFE",
		"secondary": "#9EC1FC",
		"success": "#3adb76",
		"warning": "#ffae00",
		"alert": "#ec5840",
		"info" : "#1B7BED",
		"light-gray": "#EBEDF7",
		"medium-gray": "#cacaca",
		"dark-gray": "#6C7E90",
		"black": "#0a0a0a",
		"white": "#FFFFFF",
		"triangles": "$color-primary"
		
	},
	"body" : {
		"background": "$color-white",
		"font-color": "$color-dark-gray",
		"font-family": "\"Helvetica Neue\", Helvetica, Roboto, Arial, sans-serif",
		"antialiased": "true"
	},
	"breakpoints": "( small: 0, smallplus: 512px, medium: 768px, large: 1024px, xlarge: 1200px, xxlarge: 1440px, xxlargeplus:1700px , xxlargeplus2:1900px ,xxxlarge: 2048px)",
    "breakpoint-classes": "(small medium large xlarge xxlarge xxlargeplus xxlargeplus2)",
	"topbar":{ 
		"padding": "0.5rem",
		"background": "transparent",
		"link-color": "$color-white",
		"input-width": "200px",
		"height": "rem-calc(72)"
	},
	"button" : {
    	"padding": "rem-calc(16) rem-calc(45)",
        "margin": "$global-margin/2 0",
        "fill": "solid",
        "background": "$color-primary",
        "background-hover": "scale-color($button-background, $lightness: -15%)",
        "color": "$color-white",
        "color-alt": "$color-black",
        "radius": "$global-radius",
        "sizes": "( tiny: 0.6rem, small: 0.75rem, default: 0.9rem, large: 1.25rem)",
        "opacity-disabled": "0.25"
    },
    "titlebar" : {
        "background" : "transparent",
        "color" : "$color-black",
        "icon-color" : "$color-black",
        "icon-color-hover" : "$color-primary"
	},
	"header": { 
		"lineheight" : "1.2",
		"color" : "$color-primary"
	}
}
