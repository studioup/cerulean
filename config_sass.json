{
	"mediaqueries": {
		"landscape":"'screen and (orientation: landscape)'",
		"portrait":"'screen and (orientation: portrait)'",
		"retina":"'only screen and (-webkit-min-device-pixel-ratio: 2), only screen and (min--moz-device-pixel-ratio: 2), only screen and (-o-min-device-pixel-ratio: 2/1), only screen and (min-device-pixel-ratio: 2), only screen and (min-resolution: 192dpi), only screen and (min-resolution: 2dppx)'",
		"small":"'only screen and (min-width: 0em)'"
	},
	"global": {
    	"width": "rem-calc(1200)",
    	"lineheight": "1.5",
    	"margin": "1rem",
        "padding": "1rem",
        "margin": "1rem",
        "weight-normal": "normal",
        "weight-bold": "bold",
        "radius": "0",
        "namespace": "false",
        "text-direction": "ltr"
    },
	"color":{
		"primary" : "#2199e8",
		"secondary": "#777",
		"success": "#3adb76",
		"warning": "#ffae00",
		"alert": "#ec5840",
		"light-gray": "#e6e6e6",
		"medium-gray": "#cacaca",
		"dark-gray": "#8a8a8a",
		"black": "#0a0a0a",
		"white": "#fefefe",
		"triangles": "$color-primary"
	},
	"body" : {
		"background": "$color-white",
		"font-color": "$color-black",
		"font-family": "\"Helvetica Neue\", Helvetica, Roboto, Arial, sans-serif",
		"antialiased": "true"
	},
	"breakpoints": "( small: 0, smallplus: 512px, medium: 768px, large: 1024px, xlarge: 1200px, xxlarge: 1440px, xxxlarge: 2048px)",
	"topbar":{ 
		"padding": "0.5rem",
		"background": "#eee",
		"link-color": "$color-primary",
		"input-width": "200px",
		"height": "rem-calc(100)"
	},
	"button" : {
    	"padding": "0.85em 1em",
        "margin": "0 $global-margin $global-margin 0",
        "fill": "solid",
        "background": "$color-black",
        "background-hover": "scale-color($button-background, $lightness: -15%)",
        "color": "$color-white",
        "color-alt": "$color-black",
        "radius": "$global-radius",
        "sizes": "( tiny: 0.6rem, small: 0.75rem, default: 0.9rem, large: 1.25rem)",
        "opacity-disabled": "0.25"
    }
	
}